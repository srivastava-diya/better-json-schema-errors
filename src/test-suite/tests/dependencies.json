{
  "$schema": "../test-suite.schema.json",

  "description": "The dependentRequired, dependentSchemas, and dependencies keywords",
  "tests": [
    {
      "description": "dependentRequired",
      "compatibility": "2019",
      "schema": {
        "dependentRequired": {
          "foo": ["bar", "baz"],
          "aaa": ["bbb"]
        }
      },
      "instance": {
        "foo": 42,
        "bar": true,
        "aaa": true
      },
      "errors": [
        {
          "messageId": "required-message",
          "messageParams": {
            "count": 2,
            "required": { "and": ["baz", "bbb"] }
          },
          "instanceLocation": "#",
          "schemaLocations": ["#/dependentRequired"]
        }
      ]
    },
    {
      "description": "array-form dependencies",
      "compatibility": "<=7",
      "schema": {
        "dependencies": {
          "foo": ["bar", "baz"],
          "aaa": ["bbb"]
        }
      },
      "instance": {
        "foo": 42,
        "bar": true,
        "aaa": true
      },
      "errors": [
        {
          "messageId": "required-message",
          "messageParams": {
            "count": 2,
            "required": { "and": ["baz", "bbb"] }
          },
          "instanceLocation": "#",
          "schemaLocations": ["#/dependencies"]
        }
      ]
    },
    {
      "description": "dependentRequired pass",
      "compatibility": "2019",
      "schema": {
        "dependentRequired": {
          "foo": ["bar"]
        }
      },
      "instance": {
        "foo": 42,
        "bar": true
      },
      "errors": []
    },
    {
      "description": "array-form dependencies pass",
      "compatibility": "<=7",
      "schema": {
        "dependencies": {
          "foo": ["bar"]
        }
      },
      "instance": {
        "foo": 42,
        "bar": true
      },
      "errors": []
    },
    {
      "description": "dependentSchemas",
      "compatibility": "2019",
      "schema": {
        "dependentSchemas": {
          "foo": { "required": ["bar", "baz"] },
          "aaa": { "required": ["bbb"] }
        }
      },
      "instance": {
        "foo": 42,
        "bar": true,
        "aaa": true
      },
      "errors": [
        {
          "messageId": "required-message",
          "messageParams": {
            "count": 2,
            "required": { "and": ["baz", "bbb"] }
          },
          "instanceLocation": "#",
          "schemaLocations": [
            "#/dependentSchemas/foo/required",
            "#/dependentSchemas/aaa/required"
          ]
        }
      ]
    },
    {
      "description": "schema-form dependencies",
      "compatibility": "<=7",
      "schema": {
        "dependencies": {
          "foo": { "required": ["bar", "baz"] },
          "aaa": { "required": ["bbb"] }
        }
      },
      "instance": {
        "foo": 42,
        "bar": true,
        "aaa": true
      },
      "errors": [
        {
          "messageId": "required-message",
          "messageParams": {
            "count": 1,
            "required": { "and": ["baz"] }
          },
          "instanceLocation": "#",
          "schemaLocations": ["#/dependencies/foo/required"]
        },
        {
          "messageId": "required-message",
          "messageParams": {
            "count": 1,
            "required": { "and": ["bbb"] }
          },
          "instanceLocation": "#",
          "schemaLocations": ["#/dependencies/aaa/required"]
        }
      ]
    },
    {
      "description": "dependentSchemas on a non-object",
      "compatibility": "2019",
      "schema": {
        "dependentSchemas": {
          "foo": { "required": ["bar"] }
        }
      },
      "instance": 42,
      "errors": []
    },
    {
      "description": "schema-form dependencies on a non-object",
      "compatibility": "<=7",
      "schema": {
        "dependentSchemas": {
          "foo": { "required": ["bar"] }
        }
      },
      "instance": 42,
      "errors": []
    },
    {
      "description": "dependentSchemas pass",
      "schema": {
        "dependentSchemas": {
          "foo": { "required": ["bar"] }
        }
      },
      "instance": {
        "foo": 42,
        "bar": true
      },
      "errors": []
    },
    {
      "description": "schem-form dependencies pass",
      "schema": {
        "dependencies": {
          "foo": { "required": ["bar"] }
        }
      },
      "instance": {
        "foo": 42,
        "bar": true
      },
      "errors": []
    },
    {
      "description": "schema-form and array-form dependencies together",
      "compatibility": "<=7",
      "schema": {
        "dependencies": {
          "foo": { "required": ["bar", "baz"] },
          "aaa": ["bbb"]
        }
      },
      "instance": {
        "foo": 42,
        "bar": true,
        "aaa": true
      },
      "errors": [
        {
          "messageId": "required-message",
          "messageParams": {
            "count": 1,
            "required": { "and": ["baz"] }
          },
          "instanceLocation": "#",
          "schemaLocations": ["#/dependencies/foo/required"]
        },
        {
          "messageId": "required-message",
          "messageParams": {
            "count": 1,
            "required": { "and": ["bbb"] }
          },
          "instanceLocation": "#",
          "schemaLocations": ["#/dependencies"]
        }
      ]
    }
  ]
}
